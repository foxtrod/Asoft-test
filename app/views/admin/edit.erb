<%= form_for :admin, :url => admin_path, method: :post, html: { :class => 'form-inline' } do |f| %>
    <div class="form-group">
      <%= f.number_field :refresh_time, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.datetime_field :date_of_upload, class: 'form-control' %>
    </div>

    <div class="btn btn-default">
      <%= f.submit %>
    </div>
<% end %>